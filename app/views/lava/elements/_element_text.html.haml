- if element.present?
  .cms{:id => "#{element.id}", :class => "editable #{args[:reference]}"}
    = render "elements/text", { :element => element, :args => args }
- else
  .cms{:id => "", :class => "editable #{args[:reference]}"}
    - if user_signed_in?
      Click to edit...
    

- if user_signed_in?
  :css
    .editable{}
    .editable:hover{background-color:#ffc;}

  - css_class = ".#{args[:reference]}"
  :javascript
    $(document).ready(function(){
      $("#{css_class}").editable("/elements", {

        #{element.present? ? "loadurl: '/elements/#{element.id}?Rnd=' + Math.random().toString()," : ""}
        submitdata: { utf8: "âœ“", authenticity_token: #{form_authenticity_token.inspect}, element: { reference: "#{args[:reference]}", element_type: "#{args[:element_type]}" } },
        indicator:  "Saving...",
        type:       "#{args[:editor_type]}",
        rows:       "#{args[:editor_rows]}",
        width:      "100%",
        tooltip:    "Click to edit...",
        onblur:     "ignore",
        submit:     "OK",
        cancel:     "Cancel"
      });
    });